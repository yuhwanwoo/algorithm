package study;

public class test04 {

	public static void main(String[] args) {
		String C="example";
		String S="John Doe";
		System.out.println(solution(S,C));
	}

	public static String solution(String S,String C) {
		String[] a=C.split(" ");
		if(a.length==2) {
			System.out.println(a[0]+" "+a[1]+" "+"<"+a[1]+"_"+a[0]+"@"+C+".com>");
			return a[0]+" "+a[1]+" "+"<"+a[1]+"_"+a[0]+"@"+C+".com>";
		}
		return "";
	}
}
